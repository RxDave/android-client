<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:padding="@dimen/padding_section"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/fundGridLayout">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="456 - College Fund"
            android:id="@+id/fundValue"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/large_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash Available To Trade"
            android:id="@+id/availableCashLabel"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Committed to Open Orders"
            android:id="@+id/committedCashLabel"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:id="@+id/committedCashValue"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="right"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settled Cash"
            android:id="@+id/settledCashLabel"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$25,549.01"
            android:id="@+id/availableCashValue"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="right"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$548.92"
            android:id="@+id/settledCashValue"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="right"
            android:textSize="@dimen/small_font_size" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_section"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:id="@+id/tradeDetailsGridLayout"
        android:layout_below="@+id/fundGridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbol"
            android:id="@+id/symbolLabel"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="@dimen/medium_font_size" />

        <AutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ADEJ"
            android:id="@+id/symbolValue"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADIRA ENERGY LTD"
            android:id="@+id/symbolDescriptionValue"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="@dimen/small_font_size" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$131.34"
                android:id="@+id/symbolPriceValue"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-3.11"
                android:id="@+id/symbolPriceChangeValue"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(-2.31%)"
                android:id="@+id/symbolPriceChangePercentageValue"
                android:layout_row="2"
                android:layout_column="1"
                android:textSize="@dimen/small_font_size" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AS OF 12:34 PM ET 10/11/12"
            android:id="@+id/symbolPriceAsOfValue"
            android:layout_row="5"
            android:layout_column="1"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action"
            android:id="@+id/actionLabel"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="@dimen/medium_font_size" />

        <AutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/actionValue"
            android:layout_row="6"
            android:layout_column="1"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:id="@+id/quantityLabel"
            android:layout_row="7"
            android:layout_column="0"
            android:textSize="@dimen/medium_font_size" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quantityValue"
            android:layout_row="7"
            android:layout_column="1"
            android:text="200"
            android:inputType="number"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Type"
            android:id="@+id/orderTypeLabel"
            android:layout_row="8"
            android:layout_column="0"
            android:textSize="@dimen/medium_font_size" />

        <AutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Limit"
            android:id="@+id/orderTypeValue"
            android:layout_row="8"
            android:layout_column="1"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limit Price"
            android:id="@+id/limitPriceLabel"
            android:layout_row="9"
            android:layout_column="0"
            android:textSize="@dimen/medium_font_size" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/limitPriceValue"
            android:layout_row="9"
            android:layout_column="1"
            android:text="125.10"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time in Force"
            android:id="@+id/timeInForceLabel"
            android:layout_row="10"
            android:layout_column="0"
            android:textSize="@dimen/medium_font_size" />

        <AutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Day"
            android:id="@+id/timeInForceValue"
            android:layout_row="10"
            android:layout_column="1"
            android:textSize="@dimen/medium_font_size" />

    </GridLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_section"
        android:background="@color/gray_light"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:id="@+id/previewOrderGridLayout">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Preview Order"
            android:id="@+id/previewOrderButton"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="@dimen/medium_font_size"
            android:background="@color/green1"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </GridLayout>

</RelativeLayout>